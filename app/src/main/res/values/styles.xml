<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/secondaryTextColor</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="MaterialInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
    </style>

    <style name="MaterialInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="MultilineMaterialInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <!--BUTTONS-->

    <style name="BaseButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/default_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MainButton" parent="BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/medium_radius</item>
        <item name="android:backgroundTint">@color/selector_button_color</item>
        <item name="android:textColor">@color/lightTextColor</item>
    </style>

    <style name="SecondaryButton" parent="BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/medium_radius</item>
        <item name="android:backgroundTint">@color/elementBackground</item>
        <item name="android:textColor">@color/selector_button_color</item>
        <item name="strokeColor">@color/selector_button_color</item>
        <item name="strokeWidth">@dimen/button_stroke_width</item>
    </style>

    <style name="SmallButton" parent="BaseButton">
        <item name="android:layout_width">@dimen/small_button_width</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:minWidth">@dimen/small_button_size</item>
        <item name="android:minHeight">@dimen/small_button_size</item>
        <item name="iconTint">@color/darkIconColor</item>
        <item name="strokeWidth">@dimen/zero_stroke_width</item>
        <item name="rippleColor">@color/rippleColor</item>
    </style>

    <style name="ActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">@dimen/small_button_size</item>
        <item name="android:layout_height">@dimen/small_button_size</item>
        <item name="fabCustomSize">@dimen/small_button_size</item>
        <item name="tint">@color/lightIconColor</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TransparentCircleButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">@dimen/small_button_size</item>
        <item name="android:layout_height">@dimen/small_button_size</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/zero_padding</item>
        <item name="iconTint">@color/darkIconColor</item>
        <item name="strokeWidth">@dimen/zero_stroke_width</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayCircle</item>
    </style>

    <style name="ShapeAppearanceOverlayCircle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>

    <!--CARD VIEW-->

    <style name="DefaultMaterialCard">
        <item name="android:backgroundTint">@color/elementBackground</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/medium_radius</item>
    </style>

    <style name="ElementMaterialCard" parent="DefaultMaterialCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/very_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/very_small_margin</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
    </style>

    <!--TEXT-->
    <!-- Naming: [Size*][Secondary][FontWeight*][Center]Text -->
    <!-- Size* : Large, Medium, Small -->
    <!-- FontWeight* : Regular, Bold -->
    <!-- * - required -->
    <style name="BaseText">
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="SecondaryText" parent="BaseText">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="LargeRegularText" parent="BaseText">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="LargeRegularCenterText" parent="BaseText">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="LargeBoldCenterText" parent="BaseText">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="MediumRegularText" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="MediumBoldText" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="MediumBoldCenterText" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="MediumSecondaryRegularText" parent="SecondaryText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="MediumSecondaryRegularCenterText" parent="SecondaryText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="MediumSecondaryBoldText" parent="SecondaryText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="SmallRegularText" parent="BaseText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="SmallSecondaryText" parent="SecondaryText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="SmallSecondaryCenterText" parent="SecondaryText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- BOTTOM BAR -->

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
        <item name="itemIconTint">@color/selector_navigation</item>
        <item name="itemTextColor">@color/selector_navigation</item>
    </style>

    <!-- BOTTOM SHEET -->

    <style name="DialogFragmentStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomModalStyle</item>
        <item name="background">@android:color/white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="BottomModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
    </style>

    <style name="BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DefaultBottomSheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="LoadingProgressIndicator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="BlurView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@drawable/background_blur</item>
    </style>

</resources>