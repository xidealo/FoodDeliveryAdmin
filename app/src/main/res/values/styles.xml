<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/hintColor</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
        <item name="boxStrokeColor">@color/hintColor</item>
        <item name="boxBackgroundColor">@color/backgroundComponent</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="startIconTint">@color/hintColor</item>
        <item name="hintTextColor">@color/iconTintColor</item>
        <item name="counterTextColor">@color/iconTintColor</item>
        <item name="helperTextTextColor">@color/iconTintColor</item>
    </style>

    <style name="MaterialInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:background">@color/backgroundComponent</item>
    </style>
    <!--BUTTONS-->

    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">@dimen/small_radius</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">@dimen/default_button_width</item>
    </style>

    <style name="SmallButton" parent="BaseButton">
        <item name="android:layout_width">@dimen/small_button_width</item>
    </style>

    <style name="DialogSecondaryButton" parent="SmallSecondaryButton">
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>

    <style name="SmallSecondaryButton" parent="SmallButton">
        <item name="strokeColor">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/cardViewBackground</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="SmallMainButton" parent="SmallButton">
        <item name="android:backgroundTint">@color/selector_small_main_button_color</item>
    </style>

    <style name="DialogMainButton" parent="SmallMainButton">
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>

    <style name="DefaultMaterialCard">
        <item name="background">@color/cardViewBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <!--ORDER ELEMENT-->
    <style name="TitleOrderElement">
        <item name="android:textSize">@dimen/medium_margin</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="TimeOrderElement">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_light</item>
    </style>

    <style name="AddressOrderElement">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="CostOrderElement">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>
    <!--ORDER STATUS-->
    <style name="TitleOrderStatus">
        <item name="android:textSize">@dimen/medium_margin</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>


</resources>