<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/hintColor</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
    </style>

    <style name="MaterialInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <!--BUTTONS-->
    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">@dimen/small_radius</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">@dimen/default_button_width</item>
    </style>

    <style name="SmallButton" parent="BaseButton">
        <item name="android:layout_width">@dimen/small_button_width</item>
    </style>

    <style name="SmallSecondaryButton" parent="SmallButton">
        <item name="strokeColor">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/cardViewBackground</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="SmallMainButton" parent="SmallButton">
        <item name="android:backgroundTint">@color/selector_small_main_button_color</item>
    </style>

    <style name="DefaultMaterialCard">
        <item name="background">@color/cardViewBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/medium_radius</item>
    </style>

    <style name="BaseActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/white</item>
        <item name="borderWidth">0dp</item>
    </style>

    <!--TEXT-->
    <style name="BaseText">
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainTitle" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="SmallTitle" parent="BaseText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="MainText" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="LargeMainText" parent="BaseText">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="SmallText" parent="BaseText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="HelpText" parent="BaseText">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
    </style>

    <style name="GreyHelpText" parent="HelpText">
        <item name="android:textColor">@color/hintColor</item>
    </style>

    <style name="CenterText" parent="BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/font_roboto_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <!-- BOTTOM BAR -->
    <style name="BottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="elevation">10dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/selector_navigation</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
    </style>

</resources>