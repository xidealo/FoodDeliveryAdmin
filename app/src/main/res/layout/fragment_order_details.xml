                <RadioButton
                    android:id="@+id/fragment_order_details_rb_preparing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_change_status_preparing"
                    android:textColor="@color/mainTextColor" />

                <RadioButton
                    android:id="@+id/fragment_order_details_rb_sent_out"
                    android:layout_width="match_parent"
