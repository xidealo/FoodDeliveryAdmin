            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_order_details_btn_cancel"
                style="@style/SmallSecondaryButton"
                android:layout_marginEnd="@dimen/small_margin"
                android:text="@string/action_change_status_cancel"
                android:layout_margin="@dimen/small_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fragment_order_details_btn_confirm"
                app:layout_constraintTop_toBottomOf="@+id/fragment_order_details_tv_order_new_total_cost" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_order_details_btn_confirm"
                style="@style/SmallMainButton"
                android:text="@string/action_change_status_confirm"
                android:layout_margin="@dimen/small_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_order_details_tv_order_new_total_cost" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>