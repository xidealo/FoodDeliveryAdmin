<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/element_statistic_mvc_main"
        style="@style/ElementMaterialCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/element_statistic_tv_period"
                style="@style/LargeRegularText"
                android:layout_margin="@dimen/small_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tool:text="16 мая 2021"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/element_statistic_tv_count"
                style="@style/SmallRegularText"
                android:layout_margin="@dimen/small_margin"
                tool:text="Заказов: 15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/element_statistic_tv_proceeds"
                style="@style/LargeBoldCenterText"
                android:layout_margin="@dimen/small_margin"
                tool:text="15000 ₽"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/element_statistic_tv_count" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>