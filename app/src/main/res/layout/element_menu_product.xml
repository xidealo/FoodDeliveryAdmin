<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/element_menu_product_mcv_main"
        style="@style/ElementMaterialCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/element_menu_product_iv_photo"
                android:layout_width="@dimen/image_element_width"
                android:layout_height="@dimen/image_element_height"
                android:src="@drawable/default_product"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/element_menu_product_tv_title"
                style="@style/MediumBoldText"
                android:layout_margin="@dimen/small_margin"
                app:layout_constraintEnd_toStartOf="@+id/element_menu_product_iv_visible"
                app:layout_constraintStart_toEndOf="@id/element_menu_product_iv_photo"
                app:layout_constraintTop_toTopOf="parent"
                tool:text="Product" />

            <ImageView
                android:id="@+id/element_menu_product_iv_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:src="@drawable/ic_visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/element_menu_product_tv_new_cost"
                style="@style/MediumRegularText"
                android:layout_marginTop="@dimen/very_small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/element_menu_product_tv_title"
                tool:text="100 ₽" />

            <TextView
                android:id="@+id/element_menu_product_tv_old_cost"
                style="@style/MediumSecondaryRegularText"
                android:layout_margin="@dimen/very_small_margin"
                app:layout_constraintEnd_toStartOf="@+id/element_menu_product_tv_new_cost"
                app:layout_constraintTop_toBottomOf="@+id/element_menu_product_tv_title"
                tool:text="100 ₽" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>