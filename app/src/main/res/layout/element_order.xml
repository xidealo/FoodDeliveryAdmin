<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="context"
            type="android.content.Context" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="orderWithCartProducts"
            type="com.bunbeauty.fooddeliveryadmin.data.model.order.OrderWithCartProducts" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/element_order_mvc_main"
        style="@style/DefaultMaterialCard"
        bind:status="@{orderWithCartProducts.order.orderStatus}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/small_padding">

            <TextView
                android:id="@+id/element_order_tv_uuid"
                style="@style/TitleOrderElement"
                android:text="@{orderWithCartProducts.order.getUuidCode()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/element_order_tv_time"
                style="@style/TimeOrderElement"
                android:text="@{orderWithCartProducts.order.getTimeHHMM()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/element_order_tv_address"
                style="@style/AddressOrderElement"
                android:text="@{orderWithCartProducts.order.getAddress()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/element_order_tv_uuid" />

            <TextView
                android:id="@+id/element_order_tv_full_price"
                style="@style/CostOrderElement"
                android:text="@{orderWithCartProducts.getFullPrice()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/element_order_tv_address" />

            <TextView
                android:id="@+id/element_order_tv_structure"
                style="@style/CostOrderElement"
                android:text="@{orderWithCartProducts.getCartProductsStructure()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/element_order_tv_full_price" />

            <ImageView
                bind:status="@{orderWithCartProducts.order.orderStatus}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>