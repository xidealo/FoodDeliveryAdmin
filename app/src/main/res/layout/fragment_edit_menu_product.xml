<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="menuProduct"
            type="com.bunbeauty.data.model.MenuProduct" />

        <variable
            name="viewModel"
            type="com.bunbeauty.presentation.view_model.EditMenuProductViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.edit_menu.EditMenuProductFragment">

        <TextView
            android:id="@+id/element_menu_product_tv_title"
            style="@style/SmallTitle"
            android:layout_marginStart="@dimen/very_small_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            android:layout_marginEnd="@dimen/very_small_margin"
            android:text="@{menuProduct.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>