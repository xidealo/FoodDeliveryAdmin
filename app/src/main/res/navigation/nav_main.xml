<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.bunbeauty.fooddeliveryadmin.ui.log_in.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_ordersFragment"
            app:destination="@id/orders_fragment" />
    </fragment>

    <fragment
        android:id="@+id/orders_fragment"
        android:name="com.bunbeauty.fooddeliveryadmin.ui.orders.OrdersFragment"
        android:label="OrdersFragment"
        tools:layout="@layout/fragment_orders">
        <action
            android:id="@+id/action_orders_fragment_to_changeStatusDialog"
            app:destination="@id/changeStatusDialog" />
    </fragment>

    <dialog
        android:id="@+id/changeStatusDialog"
        android:name="com.bunbeauty.fooddeliveryadmin.ui.orders.ChangeStatusDialog"
        android:label="ChangeStatusDialog"
        tools:layout="@layout/dialog_change_status"/>

</navigation>